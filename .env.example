# FPL Analytics Platform Environment Configuration
# Copy this file to .env and adjust the values as needed

# Environment Detection
# Set NODE_ENV=production for production deployment
# When NODE_ENV=production: DEBUG=false, LOG_LEVEL=INFO
# Otherwise: DEBUG=true, LOG_LEVEL=DEBUG (better for development)
NODE_ENV=development

# Override debug/logging settings (optional)
# DEBUG=false
# LOG_LEVEL=INFO

# General Settings
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
POSTGRES_USER=fpl_user
POSTGRES_PASSWORD=fpl_password
POSTGRES_DB=fpl_analytics
POSTGRES_SERVER=db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
FPL_API_BASE_URL=https://fantasy.premierleague.com/api
FPL_CACHE_DURATION=300

# Backend Configuration
BACKEND_URL=http://backend:8000
ALLOWED_HOSTS=http://localhost:8080,http://localhost:8050

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Domain (for production)
DOMAIN=localhost:8080

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem